<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <!-- Back Button -->
            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="9dp"
                android:text="Back" />

            <!-- Main Header -->
            <TextView
                android:id="@+id/headerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Insights "
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Spinner for selecting a team -->
        <Spinner
            android:id="@+id/teamSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Section: Team Information -->
        <TextView
            android:id="@+id/teamInfoHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/teamStatsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:text="Team stats will appear here"
            android:textSize="16sp" />

        <!-- Section: Past 5 Games -->
        <TextView
            android:id="@+id/pastGamesHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Past 5 Games"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TableLayout
            android:id="@+id/lastGamesTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#EEEEEE"
            android:padding="8dp" />

        <!-- Section: Stats 2024 -->
        <TextView
            android:id="@+id/stats2024Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stats 2024"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/stats2024TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Season stats will appear here"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
